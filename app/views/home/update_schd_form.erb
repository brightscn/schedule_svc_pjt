
<div style="margin-top:50px">
    
    <div ng-app="myApp" ng-controller="myCtrl">
    <form action="/update_schd_act" method="POST">
        <input type="hidden" name="schd_id" value="<%= @schd_one.id %>" >
        <div class="form-group">
            <label for="exampleInputEmail1">일정이름</label>
            <input type="text" name="title" class="form-control" id="exampleInputEmail1" placeholder="일정 입력" value="<%= @schd_one.schd_title %>" required>
        </div>
        <label for="exampleInputEmail1">일정상세</label>
        <textarea class="form-control" name="cont" rows="3" id="comment" placeholder="상세내용입력(생략가능)"><%= @schd_one.schd_cont %></textarea>
         
        <div class="row">
            <div class='col-md-5'>
                <div class="form-group">
                    <lable for="exampleInputEmail1">일정시작</lable>
                    <div class='input-group date' id='datetimepicker6'>
                        <input type='text' class="form-control" name="start_time" ng-model="startTime" value="<%= @schd_one.schd_st %>" />
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
            </div>
            <div class='col-md-5'>
                <div class="form-group">
                    <lable for="exampleInputEmail1">종료시점</lable>
                    <div class='input-group date' id='datetimepicker7'>
                        <input type='text' class="form-control" name="end_time" ng-model="endTime" value="<%= @schd_one.schd_ft %>" />
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class='col-md-2'>
                <lable for="exampleInputEmail1">일정타입</lable>
                <select name="type" class="form-control">
                    <option value="A" <% if @schd_one.schd_type=="A" %> selected <%end%> >자동완료일정</option>
                    <option value="C" <% if @schd_one.schd_type=="C" %> selected <%end%> >체크일정</option>
                    <option value="D" <% if @schd_one.schd_type=="D" %> selected <%end%> >하루일정</option>
                    <option value="M" <% if @schd_one.schd_type=="M" %> selected <%end%> >여러날</option>
                    <option value="S" <% if @schd_one.schd_type=="S" %> selected <%end%> >단순일정</option>
                </select>
            </div>
            <div class='col-md-2'>
                <lable for="exampleInputEmail1">색상지정</lable>
                <select name="schd_color" class="form-control">
                    <option value="#999" <% if @schd_one.schd_color=="#999" %> selected <%end%> >- default -</option>
                    <option value="#f33" <% if @schd_one.schd_color=="#f33" %> selected <%end%> >red</option>
                    <option value="#77f" <% if @schd_one.schd_color=="#77f" %> selected <%end%> >blue</option>
                    <option value="#3f3" <% if @schd_one.schd_color=="#3f3" %> selected <%end%> >green</option>
                    <option value="#ee0" <% if @schd_one.schd_color=="#ee0" %> selected <%end%> >yellow</option>
                    <option value="#e80" <% if @schd_one.schd_color=="#e80" %> selected <%end%> >orange</option>
                </select>
            </div>
        </div>
         
        <button type="submit" class="btn btn-default">수정하기</button>
    </form>
    
    <hr>
    
    
    <div class="cir_main">
        
        <div class="cir_base"></div>
        <div class="cir_center_symb" style="z-index:100"></div>
       

        <div class="pie_case" style="transform:rotate(0deg);">
            <div class="pie_view">
                <div class="pie_case_in" style="transform:rotate(90deg);">
                    <div class="piece_b n01" style="background:#f55;font-weight:bold;color:#000"><span>1번조각</span></div>
                </div>
            </div>
        </div>
        
        <div class="pie_case" style="transform:rotate(290deg);">
            <div class="pie_view">
                <div class="pie_case_in" style="transform:rotate(10deg);">
                    <div class="piece_b n01" style="background:#f5f;font-weight:bold;color:#000"><span>3번조각</span></div>
                </div>
            </div>
        </div>
        
        <div class="pie_case" style="transform:rotate(310deg);">
            <div class="pie_view">
                <div class="pie_case_in" style="transform:rotate(10deg);">
                    <div class="piece_b n01" style="background:#ff2;font-weight:bold;color:#000"><span>2번조각</span></div>
                </div>
            </div>
        </div>
        
        <div class="pie_case" style="transform:rotate(330deg);">
            <div class="pie_view">
                <div class="pie_case_in" style="transform:rotate(30deg);">
                    <div class="piece_b n01" style="background:#2ff;font-weight:bold;color:#000"><span>2번조각</span></div>
                </div>
            </div>
        </div>
        
    </div>
    </div>
    
    <h1><a href="/">메인으로 돌아가기</a></h1>
</div>

